
page {
	background-color: #FFFFFF;
	height: 100%;
}
.user-name{
	font-size: 24rpx;
}
.send-img {
	width: 39rpx;
	height: 39rpx;
	margin-right: 10rpx;
}
.textLeft{
	text-align: left;
}
.textRight{
	text-align: right;
}
.bianji-img {
	width: 21rpx;
	height: 21rpx;
	margin-left: 30rpx;
}
.cu-bar {
	position: fixed;
	bottom: 30rpx;
	left: 30rpx;
	right: 30rpx;
	height: 80rpx;
	background: rgba(246, 246, 246, 1);
	border-radius: 4rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.cu-btn {
	position: relative;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	box-sizing: border-box;
	width: 204rpx;
	height: 78rpx;
	background: rgba(224, 152, 76, 1);
	border-radius: 0px 4px 4px 0px;
	color: #FFFFFF;
}
.cu-btn::after {
	display: none;
}
.cu-chat {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	position: fixed;
	bottom: 110rpx;
	top: 0;
}
.cu-chat .cu-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: relative;
}
.cu-chat .cu-item>.cu-avatar {
	width: 80rpx;
	height: 80rpx;
}
.cu-chat .cu-item>.main {
	max-width: calc(100% - 240rpx);
	margin: 0 60rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient:vertical;
	-webkit-box-direction:normal;
	-webkit-flex-direction:column;
	        flex-direction:column;
}
.cu-chat .cu-item>image {
	height: 320rpx;
}
.cu-chat .cu-item>.main .content {
	padding: 0 20rpx;
	border-radius: 5px;
	border: 1px solid #000000;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	max-width: 100%;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 30rpx;
	position: relative;
	min-height: 60rpx;
	line-height: 40rpx;
	text-align: left;
}
.content-one::before {
	content: '';
	position: absolute;
	top: 0;
	left: -16rpx;
	width: 8rpx;
	height: 8rpx;
	border-width:0 8rpx 8rpx 0;
	border-style: solid;
	border-top-color: transparent;
	/*自动继承父元素的border-bottom-color*/
	border-right-color: transparent;
	border-radius: 0 0 0 20px;
}
.content-two::after {
	content: '';
	position: absolute;
	top: 0;
	right:-8px;
	width: 8rpx;
	height: 8rpx;
	border-width: 0 0 8rpx 8rpx;
	border-style: solid;
	border-bottom-color: inherit;
	/*自动继承父元素的border-bottom-color*/
	border-left-color: transparent;
	border-radius: 0 0 20px 0;
}
.self {
	padding: 30rpx 0 30rpx 70rpx;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
.date {
	position: absolute;
	font-size: 24rpx;
	color: #999999;
	bottom: -20rpx;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.cu-chat .cu-item .action {
	padding: 0 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.right {
	position: absolute;
	right: 20rpx;
	top: 40%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.left {
	position: absolute;
	left: 20rpx;
	top: 40%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.other {
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	padding: 30rpx 70rpx 30rpx 0;
}

