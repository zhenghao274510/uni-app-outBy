<view class="page-body"><scroll-view class="cu-chat" id="chatlist" scroll-y="true" scroll-top="{{scollTop}}"><block wx:for="{{dataList}}" wx:for-item="v" wx:for-index="k" wx:key="k"><view data-event-opts="{{[['longtap',[['delItem',['$0',k],[[['dataList','',k,'id']]]]]]]}}" class="{{['cu-item',v.from==0?'self':'other']}}" bindlongtap="__e"><view class="main"><view class="{{['user-name',v.from==0?'textLeft':'textRight']}}">{{''+v.nickname+''}}</view><view class="{{['content',v.from==0?'content-one':'content-two']}}"><text>{{v.content}}</text></view></view><image class="{{['cu-avatar',v.from==0?'left':'right']}}" src="{{v.avatar}}"></image><view class="date">{{v.chatDate}}</view></view></block></scroll-view><view class="cu-bar"><image class="bianji-img" src="/static/img/bianji.png"></image><input class="solid-bottom" adjust-position="{{false}}" focus="{{false}}" maxlength="300" cursor-spacing="10" data-event-opts="{{[['focus',[['InputFocus',['$event']]]],['blur',[['InputBlur',['$event']]]],['input',[['__set_model',['','my_say_text','$event',[]]]]]]}}" value="{{my_say_text}}" bindfocus="__e" bindblur="__e" bindinput="__e"/><view class="action"><text class="cuIcon-emojifill text-grey"></text></view><view class="cu-btn" hover-class="btn-hover" data-event-opts="{{[['tap',[['to_send',['$event']]]]]}}" bindtap="__e"><image class="send-img" src="/static/img/sendmassage.png"></image>私信他</view></view></view>